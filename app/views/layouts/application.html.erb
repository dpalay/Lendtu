<!DOCTYPE html>
<html>
<head>
  <title>LendTu</title>

  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
  <% if signed_in? -%>
      Signed in as <strong><%= current_user.name %></strong>!
      <%= link_to "Sign out", logout_path, id: "sign_out" %>
      <ul>
        <li><%= add_link 'facebook', 'Facebook','fb_add' %></li><%# TODO: unlink link%>
        <li><%= add_link 'google_oauth2', 'Google', 'google_add' %></li>
        <li><%= link_to "Create LendTu Login", "signup", id: "signup" %></li>
      </ul>
  <% else -%>
      <ul>
        <li><%= link_to "Sign up", "signup", id: "sign_up" %></li>
        <li><%= link_to "Sign in", "signin", id: "sign_in" %></li>
        <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "fb_sign_in" %></li>
        <li><%= link_to "Sign in with Developer", "/auth/developer", id: "dev_sign_in" %></li>
        <li><%= link_to "Sign in with Google", "/auth/google_oauth2", id: "google_sign_in" %></li>
      </ul>
  <% end -%>
</div>

<%= yield %>

  <% if (ENV["RAILS_ENV"] == "development") || admin? -%>
      <div id="debug">
        <fieldset id="params_debug_info" class="debug_info">
          <legend>params</legend>
          <%= debug(params) %>
        </fieldset>
        <fieldset id="session_debug_info" class="debug_info">
          <legend>session</legend>
          <%= debug(session) %>
        </fieldset>
        <fieldset id="env_debug_info" class="debug_info">
          <legend>env</legend>
          <%= debug(request.env) %>
        </fieldset>
        <fieldset id="request_debug_info" class="debug_info">
          <legend>request</legend>
          <%= debug(request) %>
        </fieldset>
      </div>
  <% end -%>

</body>
</html>
